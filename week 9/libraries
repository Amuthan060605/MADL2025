import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatefulWidget {
  const MyApp({super.key});
  @override
  State<MyApp> createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  String _fileContent = 'No content yet.';

  // Simulate writing content (in-memory)
  void _writeToFile(String content) {
    setState(() {
      _fileContent = content;
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Simulated File IO',
      home: Scaffold(
        appBar: AppBar(title: const Text('Simulated File IO')),
        body: Padding(
          padding: const EdgeInsets.all(16),
          child: Column(
            children: [
              Expanded(
                child: SingleChildScrollView(
                  child: Text(
                    _fileContent,
                    style: const TextStyle(fontSize: 18),
                  ),
                ),
              ),
              const SizedBox(height: 20),
              TextField(
                decoration: const InputDecoration(
                  border: OutlineInputBorder(),
                  labelText: 'Write something and press Enter',
                ),
                onSubmitted: (text) {
                  _writeToFile(text);
                },
              ),
            ],
          ),
        ),
      ),
    );
  }
}
